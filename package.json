{
  "name": "gcchat-client",
  "version": "1.1.11",
  "description": "gcCHAT Client Application",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "start:electron": "electron .",
    "build:electron": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "format": "prettier --write ."
  },
  "keywords": [
    "chat",
    "websocket",
    "electron",
    "client",
    "server",
    "mongodb",
    "auth"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.782.0",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "mongodb": "^6.8.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.example.gcchat",
    "productName": "gcCHAT",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "style.css",
      "node_modules/ws/**/*",
      "node_modules/electron-store/**/*",
      "node_modules/electron-updater/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "Azurelly",
      "repo": "gcCHAT"
    }
  }
}
